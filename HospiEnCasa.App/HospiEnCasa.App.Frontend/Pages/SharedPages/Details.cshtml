@page
@model HospiEnCasa.App.Frontend.Pages.DetailsModel
@{
}
@if(@Model.Paciente!=null){
    <div id="wrapper">
        <table border=4 id="table_detail" 
            align=center cellpadding=20>

            <tr class="titulo"><td> @Model.Paciente.Nombre @Model.Paciente.Apellidos</td><td style="text-align:center">@Model.Paciente.Id</td></tr>
            <tr><td> No.Telefonico: @Model.Paciente.NumeroTelefono</td></tr>
            <tr><td> Genero: @Model.Paciente.Genero</td></tr>
            <tr><td> Direccion: @Model.Paciente.Direccion - @Model.Paciente.Ciudad</td></tr>
            <tr><td> Ubicacion: LAT:@Model.Paciente.Latitud - LON:@Model.Paciente.Longitud</td></tr>
            <tr><td> Fecha Nacimiento: @Model.Paciente.FechaNacimiento</td></tr>
            
        </table>
    </div>
    }

