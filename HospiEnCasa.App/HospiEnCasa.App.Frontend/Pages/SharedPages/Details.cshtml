        <table border=4 id="table_detail" 
            align=center cellpadding=15>

            <tr class="titulo"><td> @Model.Medico.Nombre @Model.Medico.Apellidos</td><td style="text-align:center">@Model.Medico.Id</td></tr>
            <tr><td> Especialidad: @Model.Medico.Especialidad</td></tr>
            <tr><td> Codigo Interno: @Model.Medico.Codigo</td></tr>
            <tr><td> Registro RETHUS: @Model.Medico.RegistroRethus</td></tr>
            <tr><td> Genero: @Model.Medico.Genero</td></tr>
            <tr><td> Nro.Telefonico: @Model.Medico.NumeroTelefono</td></tr>            
        </table>
    </div>
    }

